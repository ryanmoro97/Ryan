{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "lib": ["es6"],
      "outDir": "./build",
      "baseUrl": "./",
      "allowJs": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "resolveJsonModule": true
    },
    "exclude": ["node_modules"]
  }
  